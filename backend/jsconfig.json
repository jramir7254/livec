{
  "compilerOptions": {
	"baseUrl": ".",
	"paths": {
		"@/*": ["src/*"],
		"@root": ["."],
		"@utils/*": ["src/utils/*"],
		"@models/*": ["src/models/*"],
		"@controllers/*": ["src/controllers/*"],
		"@routes/*": ["src/routes/*"],
		"@database/*": ["src/database/*"],
		"@constants/*": ["src/constants/*"],
		"@service/*": ["src/service/*"],
		"@errors": ["src/errors/index.js"],
		"@logger": ["logger/logger.js"]
	},
	"module": "CommonJS",
	"moduleResolution": "Node",
	"target": "ES2020",
	"allowJs": true,
	"checkJs": true
	},
	"include": ["src", "logger"],
	"exclude": ["node_modules", "dist"]
}
